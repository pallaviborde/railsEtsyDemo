<div class="center">
  <%#<%= will_paginate @listings, :page_links => true, class:"apple_pagination" %>
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= "Sold by #{listing.user.name}" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>

<% if user_signed_in? %>
  <%= link_to "New Listing", new_listing_path, class: "btn btn-primary", data: { no_turbolink: true } %>
<% end %>
<h6><center><%= render_shareable :buttons=> ['twitter' , 'facebook', 'tumblr'] %></center></h6>

